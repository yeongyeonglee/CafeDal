<mapper namespace="com.cafedal.webapp.dao.CafeDao">
   <select id="getUseList" resultType="com.cafedal.webapp.entity.AdminCafe">
      select * from cafe
      where ${param2} like '%${param3}%' 
      order by code asc
      limit ${(param1-1)*10}, 10
   </select> 
   
   
    <insert id="insert" parameterType="com.cafedal.webapp.entity.AdminCafe">

   <selectKey order="BEFORE" keyProperty="code" resultType="String">
      select ifnull(max(cast(code as unsigned)), 0) +1 from cafe
   </selectKey>
   
   insert into cafe(code,name)
   values(#{code}, #{name})
   
   </insert>
   
   <delete id="delete" parameterType="com.cafedal.webapp.entity.AdminCafe" >
   DELETE FROM cafe WHERE code=#{code};
   </delete>
   
